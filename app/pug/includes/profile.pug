- var title = "Профиль";
- var user = users[currentUser];
- var info = user_info[currentUser];
- var searchSource = "сообщениям";
div(id="profile" role="tabpanel" aria-labelledby="pills-profile-tab" class="tab-pane fade h-100 mt-5 mx-4")
    h2(class="h2 font-weight-bold") #{title}
    include search.pug
    div(class="h-75 block-scrollable ")
        div(class="card mb-3 text-center border-0")
            div(class="card-body")
                img(class="my-3 rounded-circle" width="90" src=imagesPath+user.avatar alt="User photo in profile section")
                p(class="card-title mb-3 font-weight-bold") #{user.first_name} #{user.last_name}
                p(class="card-text mb-6 text-muted ") #{user.about}
        ul(class="list-group list-group-flush mt-4 pt-3 px-2")
          each item in info
            li(class="list-group-item mb-1 px-1 small border-gray")
                div(class="d-flex justify-content-between")
                    div
                        div(class="text-muted") #{item.title}
                        div #{item.value}
                    svg(width="17" height="16" class="text-black-50")
                        use(xlink:href=iconsPath+item.iconId)